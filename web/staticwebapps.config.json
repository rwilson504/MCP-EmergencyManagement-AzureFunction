{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/view",
      "rewrite": "/index.html"
    },
    {
      "route": "/view/*",
      "rewrite": "/index.html"
    },
    {
      "route": "/*",
      "headers": {
        "Cache-Control": "must-revalidate, max-age=6000"
      }
    },
    {
      "route": "/static/*",
      "headers": {
        "Cache-Control": "public, max-age=604800"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/*.{css,scss,js,png,gif,ico,jpg,svg}"]
  },
  "mimeTypes": {
    ".json": "application/json"
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "Content-Security-Policy": "default-src 'self' https://atlas.microsoft.com https://*.azure.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://atlas.microsoft.com; style-src 'self' 'unsafe-inline' https://atlas.microsoft.com; connect-src 'self' https://atlas.microsoft.com https://*.azurewebsites.net; img-src 'self' data: https:; font-src 'self' https:; worker-src 'self' blob:"
  },
  "auth": {
    "rolesSource": "/api/.auth/me",
    "identityProviders": {
      "azureActiveDirectory": {
        "userDetailsClaim": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/common/v2.0",
          "clientIdSettingName": "AZURE_CLIENT_ID",
          "clientSecretSettingName": "AZURE_CLIENT_SECRET"
        }
      }
    }
  }
}